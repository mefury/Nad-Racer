{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "no-undef": "error",
    "react/prop-types": "off", // Disable PropTypes validation
    "no-unused-vars": "off", // Disable unused vars warning
    "react/no-unescaped-entities": "off"
  }
}